{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "nixpacksVersion": "1.21.2",
        "builder": "NIXPACKS"
    },
    "deploy": {
        "services": [
          {
            "name": "backend",  
            "source": "server" 
            "startCommand": "gunicorn main:app",
            "restartPolicyType": "ON_FAILURE",
            "restartPolicyMaxRetries": 10
          }
        ]
      }
}
