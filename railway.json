{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "nixpacksVersion": "1.21.2",
        "builder": "NIXPACKS",
        "buildCommand": "cd server pip install -r requirements.txt && if [ -d \"ui\" ]; then cd ui && npm install && npm run build && cd ..; fi"
    },
    "deploy": {
        "services": [
          {
            "name": "frontend", 
            "source": "client", 
          },
          {
            "name": "backend",  
            "source": "server" 
          }
        ]
      }
}
